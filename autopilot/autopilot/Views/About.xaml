<Window x:Class="autopilot.Views.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:autopilot.Views"
        mc:Ignorable="d"
		ResizeMode="NoResize"
		WindowStartupLocation="CenterScreen"
        Title="About" Height="200" Width="400">
	<Grid Background="{StaticResource AppBackgroundColor}">
		<Label x:Name="TitleLabel" Content="Autopilot" HorizontalContentAlignment="Center" VerticalAlignment="Top" FontSize="48"/>
		<Label x:Name="DescriptionLabel" Content="A macro tool in C#/WPF" HorizontalContentAlignment="Center" Margin="0,74,0,0" VerticalAlignment="Top" Width="392"/>
		<Label x:Name="HelpTextLabel" HorizontalContentAlignment="Center" Margin="0,126,0,0" VerticalAlignment="Top" Width="392">
			<Hyperlink NavigateUri="https://github.com/scott246/autopilot" RequestNavigate="Hyperlink_RequestNavigate" Foreground="{StaticResource AccentColor}">
				Help, feedback, contributions, and bug reports on GitHub
			</Hyperlink> 
		</Label>
	</Grid>
</Window>
