<Window x:Class="autopilot.Views.Preferences.Preferences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:autopilot.Views.Preferences"
        mc:Ignorable="d"
        Title="Settings" Height="200" Width="200">
	<Grid Background="{StaticResource AppBackgroundColor}">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="40"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Margin="10">
			<CheckBox x:Name="WarnFileDeleteCheckbox" Content="Warn on file delete" Checked="WarnFileDeleteCheckbox_Checked" Unchecked="WarnFileDeleteCheckbox_Unchecked" Template="{StaticResource CheckBoxControlTemplate}"/>
		</StackPanel>
		<Grid Grid.Row="1" Margin="10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="60"/>
			</Grid.ColumnDefinitions>
			<Button Content="Apply" Grid.Column="1" Click="ApplyButton_Click" Template="{StaticResource ButtonControlTemplate}"/>
		</Grid>
	</Grid>
</Window>
