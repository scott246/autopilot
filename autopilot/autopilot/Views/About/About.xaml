<Window x:Class="autopilot.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:autopilot"
        mc:Ignorable="d"
        Title="About" Height="200" Width="400">
	<Grid Background="{StaticResource BackgroundColor}">
		<Label x:Name="TitleLabel" Content="Autopilot" Foreground="{StaticResource TextColor}" HorizontalContentAlignment="Center" VerticalAlignment="Top" FontSize="48"/>
		<Label x:Name="DescriptionLabel" Content="A WPF Macro Tool" Foreground="{StaticResource TextColorDark}" HorizontalContentAlignment="Center" Margin="0,74,0,0" VerticalAlignment="Top" Width="392"/>
		<Label x:Name="HelpTextLabel" HorizontalContentAlignment="Center" Margin="0,126,0,0" VerticalAlignment="Top" Width="392">
			<Hyperlink NavigateUri="https://github.com/scott246/autopilot" RequestNavigate="Hyperlink_RequestNavigate">
				Contributions, bug reports, help, and feedback on GitHub
			</Hyperlink> 
		</Label>
	</Grid>
</Window>
