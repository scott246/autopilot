<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:local="clr-namespace:autopilot">
	<Style x:Key="TextBoxStyle" TargetType="TextBox">
		<Setter Property="Background" Value="#33ffffff"/>
		<Setter Property="Foreground" Value="#ffffffff"/>
		<Setter Property="BorderBrush" Value="#66ffffff"/>
	</Style>
	<Style x:Key="CheckBoxStyle" TargetType="CheckBox">
		<Setter Property="Foreground" Value="#ffffffff"/>
		<Setter Property="Background" Value="#33ffffff"/>
	</Style>
	
	<SolidColorBrush x:Key="BackgroundColor" Color="#333333"/>
	<SolidColorBrush x:Key="ControlBackgroundColor" Color="#33ffffff"/>
	<SolidColorBrush x:Key="BackgroundColorLight" Color="#666666"/>
	<SolidColorBrush x:Key="TextColor" Color="#ffffff"/>
	<SolidColorBrush x:Key="TextColorDark" Color="#cccccc"/>
	<SolidColorBrush x:Key="TextColorWarning" Color="#ff0000"/>
	<SolidColorBrush x:Key="AccentColor" Color="#ffa500"/>
</ResourceDictionary>